<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michael.collect_code.spannable.LatexActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/latex01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/latex02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/latex03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/latex04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f00"
            />

        <TextView
            android:id="@+id/latex05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0f0"
            />

        <TextView
            android:id="@+id/latex06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00f"
            />

        <TextView
            android:id="@+id/latex07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f0f"
            />

        <TextView
            android:id="@+id/latex08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#58f"
            />

        <TextView
            android:id="@+id/latex09"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/latex10"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#386790ff"
            />

        <TextView
            android:id="@+id/latex11"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#386790ff"
            />

        <TextView
            android:id="@+id/latex12"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="颜色渐变效果"
            />

        <TextView
            android:id="@+id/latex13"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="颜色渐变效果"
            />

        <TextView
            android:id="@+id/latex14"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="逐个字出现效果"
            />

        <TextView
            android:id="@+id/latex15"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="书写效果"
            />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>